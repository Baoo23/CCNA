router bgp 65001
neighbor 192.168.2.2 remote-as 65002
net 192.168.1.0 mask 255.255.255.252
net 192.168.2.0 mask 255.255.255.252
net 192.168.11.32 mask 255.255.255.240
redistribute eigrp 100
exi


